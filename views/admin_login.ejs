<html>
	<head>
    	<link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    	<link rel='stylesheet' href='/stylesheets/style.css' />
		<style type="text/css">
			input{
				width:100%;
			}
			h1{
				box-shadow: 0px 5px 5px rgba(0,0,0,0.2)!important;
				text-align:center!important;
				background:#ffdddd!important;
				padding:7px!important;
				margin-top: 15px!important;
			}
		</style>
	</head>
	<% if(locals.message){ %>
		<div class="col-md-2 col-md-offset-5 col-sm-12" style="margin-top:5px;padding:5px;">
			<div class="alert alert-danger alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<%=message%>
			</div>
		</div>
	<% } %>
	<div class="clearfix"></div>
	<div class="card basic-grey col-md-2 col-md-offset-5 col-sm-12" style="margin-top:5px;padding:5px;">
		
		<h1>Admin Login</h1>
		<form action="/admin/login" method="POST" accept-charset="utf-8">
			<input type="text" name="login" placeholder="login">
			<input type="password" name="pass" placeholder="password">
			<input type="submit" value="submit">
		</form>
	</div>

</html>